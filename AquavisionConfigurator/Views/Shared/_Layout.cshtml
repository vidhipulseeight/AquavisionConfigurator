						<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
					</ul>
				</div>
			</div>
		</div>*@
	<div class="container body-content">
		@RenderBody()
		<hr />
		@* FOOTER *@
		<div class="copyright_section" style="background: #ddd;">
			<div class="container" style=" padding: 20px;">
				<div class="row align-items-center">
					<div class="col-12 col-lg-6">
						<div class="single_widget_area">
							<div class="footer-logo mr-50">
								<a href="index.html"><img src="~/Content/img/product-img/AquavisionLogo.png" alt="" style="height:115px;"></a>
							</div>
							<p class="copywrite" style="margin: 0;margin-top: 20px; font-size:12px;">
								Copyright ©
								<script>document.write(new Date().getFullYear());</script> Aquavision Distribution Ltd | Registered Company Number: 07756677
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		@*<footer>
				<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			</footer>*@
