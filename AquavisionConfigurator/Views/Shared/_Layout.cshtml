	@* Styles *@
	<link rel="stylesheet" href="~/Content/css/core-style.css">
	<link rel="stylesheet" href="~/Content/css/index-style.css">
	<link rel="stylesheet" href="~/Content/css/responsive.css">
	<link rel="stylesheet" href="~/Content/css/jquery.mCustomScrollbar.min.css">
	<link rel="stylesheet" href="~/Content/css/custom-index.css">
	<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
