@model Aquavision.Data.Models.Category
<div class="row">
	<div class="col-md-12">
		<div class="portlet">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-square"></i>Edit Category
				</div>
			</div>
			<div class="portlet-body form">
				@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" })) {
					@Html.HiddenFor(model => model.Id)
					<div class="form-body">
						<div class="form-group">
							@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
							<div class="col-md-4">
								<input class="form-control" id="Name" name="Name" type="text" value="@Model.Name" />
								@Html.ValidationMessageFor(model => model.Name)
							</div>
						</div>
					</div>
					<div class="form-actions fluid">
						<div class="col-md-offset-3 col-md-9">
							<button type="submit" class="btn blue">Update</button>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
