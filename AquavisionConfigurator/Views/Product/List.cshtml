@model IEnumerable<Aquavision.Data.Models.Product>

@* add to bundle or layout*@
<link href="~/Content/css/custom-style.css" rel="stylesheet" />

<div class="banner_section">
	<div class="container-fluid">
		<div id="costum_slider" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="~/Content/img/product-img/HomeImage1.jpg" alt="Image">
				</div>
				<div class="carousel-item">
					<img src="~/Content/img/product-img/HomeImage4.jpg" alt="Image">
				</div>

			</div>
			<a class="carousel-control-prev" href="#costum_slider" role="button" data-slide="prev">
				<i class=""><img src="~/Content/img/product-img/left-arrow.png"></i>
			</a>
			<a class="carousel-control-next" href="#costum_slider" role="button" data-slide="next">
				<i class=""><img src="~/Content/img/product-img/right-arrow.png"></i>
			</a>
		</div>
	</div>
</div>

<div class="services_section">
	<div class="container">
		<h1 class="services_taital">Products</h1>
		<p class="many_taital">There are many variations of passages of Lorem Ipsum </p>
		<div class="services_section2 layout_padding">
			<div class="row row-content-center">
				@foreach (var item in Model) {
					<div class="col-lg-3 col-sm-6">
						<div class="icon_1"><img src="~/Content/img/product-img/icon-1.png"></div>
						<h2 class="furnitures_text">@item.Name</h2>
						<p class="dummy_text d-none">There are many variations of passages of Lorem Ipsum available, but the</p>
						<div class="read_bt_main">
							<div class="read_bt"><a href="@Url.Action("Customise", "Product", new {productId = item.Id})">Customise</a></div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
